extends ../../layout
include elements/colors
include elements/types

block vars
  - pageTitle = 'Colors & Types';

block content
  .container
    include ../../logo
    .content
      .colors
        +color-block('ds100', 'Dark Shade 100%', '#1F2041')
        +color-block('ds75', 'Dark Shade 75%', '#1F2041')
        +color-block('ds50', 'Dark Shade 50%', '#1F2041')
        +color-block('ds25', 'Dark Shade 25%', '#1F2041')
        +color-block('ds5', 'Dark Shade 5%', '#1F2041')
        +color-block('purple', 'Purple', '#BC9CFF')
        +color-block('green', 'Green', '#6FCF97')
      .types
        +types-block('h1', 'H1', 'This one is the sub-section or widget title')
        +types-block('h2', 'H2', 'Next one is the item title inside widgets')
        +types-block('h3', 'H3', 'This is a label or CTA text')
        +types-block('body', 'Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.')