extends ../../layout

include elements/element-header
include elements/element-input
include elements/dropdown-menu
include elements/dropdown-menu-list
include elements/checkbox
include elements/checkbox-expand

block vars
  - pageTitle = 'Form Elements';

block content
  .container
    include ../../logo
    .content

      .input-section
        +element-header('text field', 'default', 'text-field-default')
        .border
          +element-input('text', 'Email', 'email')

        +element-header('text field', 'hover / focus', 'text-field-hover')
        .border
          +element-input('text', '', 'text', '', 'This is pretty awesome')

        +element-header('dropdown', '', '')
        .border-dropdown
          +dropdown-menu('Сколько гостей', 'drop')

        +element-header('masked text field', '', 'text-field-masked')
        .border
          +element-input('text', 'ДД.ММ.ГГГГ', 'text')

        .dropdown-date-wrapper
          .dropdown-date
            +element-header('date Dropdown', '', '')
            .border-dropdown
              +dropdown-menu('ДД.ММ.ГГГГ', 'date-dropdown')
          .dropdown-date
            +element-header('date Dropdown', '', '')
            .border-dropdown
              +dropdown-menu('19.08.2019', 'date-dropdown-2')

        .w267

          +element-header('filter-rate-dropdown', '', 'filter-dropdown')
          .border-dropdown
            +dropdown-menu('19 авг - 23 авг', 'filter-dropdown')

          +element-header('subscription text field', '', 'text-field-default')
          .border
            +element-input('text', 'Email', 'email', '../../../static/img/arrow_forward_purple.svg')

          +element-header('dropdown', '', 'default')
          .border-dropdown
            +dropdown-menu('2 спальни, 2 кровати...', 'dropdown-default')

          +element-header('dropdown', 'default', '')
          .border-dropdown.shadow
            +dropdown-menu('2 спальни, 2 кровати...', 'dropdown-default-expand')
            .dropdown-menu-list
              ul.dropdown-menu__ul
                +listItem('спальни', '2')
                +listItem('кровати', '2')
                +listItem('ванные комнаты', '0')

          .checkbox-expand
            +checkbox-expand('expandable checkbox list', 'expand-checkbox')
            ul.checkbox-expand__list
              +checkbox('Завтрак', 'breakfast', checked)
              +checkbox('Письменный стол', 'table', 'checked')
              +checkbox('Стул для кормления', 'chair', 'checked')
              +checkbox('Кроватка', 'childbed', 'checked')
              +checkbox('Телевизор', 'tx1', checked)
              +checkbox('Шампунь', 'shampoo1', checked)
              +checkbox('Телевизор', 'tv2', checked)
              +checkbox('Шампунь', 'shampoo2', checked)

          .checkbox-expand
            +checkbox-expand('expandable checkbox list', 'expand-checkbox1')
            ul.checkbox-expand__list
              +checkbox('Завтрак', 'breakfast1', checked)
              +checkbox('Письменный стол', 'table1', 'checked')
              +checkbox('Стул для кормления', 'chair1', 'checked')
              +checkbox('Кроватка', 'childbed1', 'checked')
              +checkbox('Телевизор', 'tx11', checked)
              +checkbox('Шампунь', 'shampoo11', checked)
              +checkbox('Телевизор', 'tv21', checked)
              +checkbox('Шампунь', 'shampoo21', checked)

        include elements/specials

      .middle-section
        +element-header('checkbox buttons', '', '')
        ul(style='padding: 0; margin: 8px, 0, 0')
          +checkbox('Можно курить', 'smoking')
          +checkbox('Можно с питомцами', 'pets', 'checked')
          +checkbox('Можно пригласить гостей (до 10 человек)', 'guest', 'checked')

        include elements/radio-buttons
        include elements/toggle-buttons
        include elements/like-button
        include elements/star-rating

        +element-header('dropdown', '', '')
        .border-dropdown.shadow
          +dropdown-menu('Сколько гостей', 'dropdown')
          .dropdown-menu-list
            ul.dropdown-menu__ul
              +listItem('взрослые', '0')
              +listItem('дети', '0')
              +listItem('младенцы', '0')
              include elements/dropdown-menu-list-bottom-btn